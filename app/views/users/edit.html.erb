  <%= form_for @current_user do |f|%>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :value => @user.email, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :handle %>
      <%= f.text_field :username, :value => @user.username, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :value => @user.name,:class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, :value => @user.image, :class => "form-control" %>
    </div>
    <%= f.submit "Update Profile", :class => "btn-primary" %>
  <% end %>
