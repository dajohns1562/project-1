<%= form_for @current_user do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, :value => @user.email %>

  <%= f.label :handle %>
  <%= f.text_field :username, :value => @user.username %>

  <%= f.label :name %>
  <%= f.text_field :name, :value => @user.name %>

  <%= f.label :image %>
  <%= f.text_field :image, :value => @user.image %>

  <%= f.submit "Update Profile" %>
<% end %>
